<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:r="urn:import:za.ac.sun.cs.hons.minke.client.gui.removable" >

    <ui:style>
		.header {
			height: 100%;
			width: 100%;
		}
		
		.header td {
			font: bold italic "Times New Roman", "MS Serif", "New York", serif;
			font-weight: bold;
			text-shadow: #fff 0 2px 2px;
			padding: 2px 0 1px 10px;
			color: #646572;
		}
    </ui:style>

    <g:FlowPanel>
        <g:HTML>
            <h2>
Product Search
            </h2>
            <br>
            </br>
        </g:HTML>
        <g:VerticalPanel>
                    <g:Label text="Location" />
                    <g:HorizontalPanel>
                        <g:SuggestBox
                            title="Enter the location of the product you want to search for."
                            ui:field="locationBox" focus="true"/>
                        <g:Button
                            text="Add"
                            ui:field="addLocationButton" />
                    </g:HorizontalPanel>

                    <r:DynamicList
                        styleName="{style.header}"
                        ui:field="locationList" />
                    <g:HorizontalPanel>
                            <g:Label text="Search for:" />

                            <g:RadioButton
                                name="rbs"
                                text="Product"
                                ui:field="productRB" />

                            <g:RadioButton
                                name="rbs"
                                text="Category"
                                ui:field="categoryRB" />
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:SuggestBox
                            title="Enter the your search parameters."
                            ui:field="searchBox" />
                        <g:Button
                            text="Add"
                            ui:field="addSearchButton" />
                    </g:HorizontalPanel>
                    <r:DynamicList
                        styleName="{style.header}"
                        ui:field="searchList" />
        </g:VerticalPanel>
        <g:HorizontalPanel>
            <g:Button
                text="Get Products"
                ui:field="productButton" />
            <g:Button
                text="Cancel"
                ui:field="cancelButton" />
        </g:HorizontalPanel>
    </g:FlowPanel>

</ui:UiBinder>