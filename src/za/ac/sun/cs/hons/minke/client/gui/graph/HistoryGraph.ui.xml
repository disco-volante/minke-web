<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.header {
			width: 100%;
			height: 100%;
		}
		
		.header td {
			font-weight: bold;
			text-shadow: #fff 0 2px 2px;
			padding: 2px 0 1px 10px;
		}
	</ui:style>
	<g:DockLayoutPanel unit="EM">
		<g:north size="4">
			<g:SimplePanel styleName="{style.header}">
				<g:HTML>
					<h2>Product Timelines</h2>
				</g:HTML>
			</g:SimplePanel>
		</g:north>
		<g:center>
			<g:LayoutPanel ui:field="panel" styleName="{style.header}" />
		</g:center>
		<g:west size="4">
		    <g:SimplePanel><g:Button ui:field="redrawButton" text="Redraw"/>
		     </g:SimplePanel>
		</g:west>
	</g:DockLayoutPanel>
</ui:UiBinder>
