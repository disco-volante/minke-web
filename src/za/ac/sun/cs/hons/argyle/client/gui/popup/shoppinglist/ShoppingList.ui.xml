<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.header {
			height: 100%;
			width: 100%;
		}
		
		.header td {
			font: bold italic "Times New Roman", "MS Serif", "New York", serif;
			font-weight: bold;
			text-shadow: #fff 0 2px 2px;
			padding: 2px 0 1px 10px;
			color: #646572;
		}
	</ui:style>
	<g:DockLayoutPanel unit="PX" width="350px" height="400px">
		<g:north size="40">
			<g:HorizontalPanel styleName="{style.header}">
				<g:SuggestBox ui:field='productBox' />
				<g:Button ui:field="addButton" text="Add" />
			</g:HorizontalPanel>
		</g:north>
		<g:center>
			<g:ScrollPanel width="340px" height="300px" styleName="{style.header}">
				<g:VerticalPanel ui:field='itemList' styleName="{style.header}" />
			</g:ScrollPanel>
		</g:center>
		<g:south size="40">
			<g:HorizontalPanel styleName="{style.header}">
				<g:Button ui:field='processButton' text="Process" />
				<g:Button ui:field='cancelButton' text="Cancel" />
			</g:HorizontalPanel>
		</g:south>

	</g:DockLayoutPanel>
</ui:UiBinder>
