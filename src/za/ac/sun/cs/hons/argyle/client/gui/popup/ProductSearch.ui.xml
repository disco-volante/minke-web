<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<g:FlowPanel>
		<g:Label text="Enter Product Specifications" />
		<g:HTML>
			<br></br>
		</g:HTML>
		<g:HorizontalPanel>
			<g:VerticalPanel>
				<g:Label text="Category" />
				<g:SuggestBox ui:field="productCategoryBox"
					title="Enter the category of the product you want to search for." />
			</g:VerticalPanel>
			<g:VerticalPanel>
				<g:Label text="Location" />
				<g:SuggestBox ui:field="cityBox"
					title="Enter the location of the product you want to search for." />
			</g:VerticalPanel>
		</g:HorizontalPanel>
		<g:HTMLPanel>
			<br></br>
		</g:HTMLPanel>
		<g:HorizontalPanel>
			<g:Button ui:field='productButton' text="Get Products" />
			<g:Button ui:field='cancelButton' text="Cancel" />
		</g:HorizontalPanel>
	</g:FlowPanel>
</ui:UiBinder>
