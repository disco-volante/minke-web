<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:shop='urn:import:za.ac.sun.cs.hons.argyle.client.gui'>
	<ui:style>
		.shortcuts {
			cursor: select;
		}
		
		@sprite .minke {
			gwt-image: 'minke';
			background-color: #c0f9a7;
			padding: .7em .5em 0 .6em;
		}
		
		.tree {
			cursor: pointer;
			cursor: hand;
		}
	</ui:style>
	<ui:style field="selectionStyle"
		type="za.ac.sun.cs.hons.argyle.client.util.CSSUtils.SelectionStyle">
			.selectedRow {
				background: #adcce7;
			}
			
			.selectedRow td {
				border-top: 1px solid #88a4d6;
				border-bottom: 1px solid #7b97d0;
			}
		</ui:style>
	<ui:image field='minke' src='images/minke.png' />
	<g:StackLayoutPanel styleName='{style.shortcuts}'
		unit='EM'>
		<g:stack>
			<g:header size='8'>
				<div class='{style.minke}' />
			</g:header>
			<g:Tree ui:field='tree' />
		</g:stack>
	</g:StackLayoutPanel>
</ui:UiBinder>
