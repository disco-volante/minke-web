<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		@sprite  .upButton {
			gwt-image: 'arrow_up';
			float: left;
			cursor: hand;
		}
		
		@sprite .downButton {
			gwt-image: 'arrow_down';
			float: left;
			cursor: hand;
		}
	</ui:style>
	<ui:image field='arrow_up' src='images/up.png' />
	<ui:image field='arrow_down' src='images/down.png' />
	<g:HorizontalPanel>
		<g:Cell verticalAlignment="ALIGN_MIDDLE">
			<g:IntegerBox ui:field='integerBox' value='1' width="16px" />
		</g:Cell>
		<g:VerticalPanel>
			<g:Button ui:field='upButton' styleName='{style.upButton}'
				width="12px" height="12px" />
			<g:Button ui:field='downButton' styleName='{style.downButton}'
				width="12px" height="12px" />
		</g:VerticalPanel>
	</g:HorizontalPanel>
</ui:UiBinder>
