<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.header {
			table-layout: fixed;
			height: 100%;
			width: 98%;
		}
		
		.header td {
			font: bold italic "Times New Roman", "MS Serif", "New York", serif;
			font-weight: bold;
			text-shadow: #fff 0 2px 2px;
			padding: 2px 0 1px 10px;
			color: #646572;
		}
		
		.footer {
			height: 100%;
			width: 50%;
		}
		
		.footer td {
			font: bold italic "Times New Roman", "MS Serif", "New York", serif;
			font-weight: bold;
			text-shadow: #fff 0 2px 2px;
			padding: 2px 0 1px 2px;
		}
		
		.table {
			width: 98%;
			table-layout: fixed;
		}
		
		.table td {
			padding: 2px 0 2px 10px;
		}
	</ui:style>

	<ui:style field="selectionStyle"
		type="za.ac.sun.cs.hons.argyle.client.util.CSSUtils.SelectionStyle">
			.selectedRow {
				background: #adcce7;
			}
			
			.selectedRow td {
				border-top: 1px solid #88a4d6;
				border-bottom: 1px solid #7b97d0;
			}
		</ui:style>

	<g:DockLayoutPanel unit="EM">
		<g:north size="4">
			<g:HTML ui:field="tableHeader" />
		</g:north>
		<g:north size="4">
			<g:FlexTable cellPadding="0" cellSpacing="0" styleName="{style.header}"
				ui:field="header" />
		</g:north>
		<g:center>
			<g:ScrollPanel>
				<g:FlexTable cellPadding="0" cellSpacing="0" styleName="{style.table}"
					ui:field="table" />
			</g:ScrollPanel>
		</g:center>
		<g:south size="4">
			<g:HorizontalPanel ui:field="footer" styleName="{style.footer}">
				<g:Button ui:field="viewButton" text="View..." />
			</g:HorizontalPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder>