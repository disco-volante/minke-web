<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:spin='urn:import:za.ac.sun.cs.hons.argyle.client.gui.util'>

  <ui:style>
	@sprite .remove {
			gwt-image: 'remove';
			float: left;
			cursor:hand;
		}
</ui:style>
	<ui:image field='remove' src='images/remove.gif'/>

  <g:HorizontalPanel>
  	<g:Cell verticalAlignment="ALIGN_MIDDLE">
  		<g:Label ui:field='lbl' width="91px" height="23px"/>
  	</g:Cell>
      <g:Cell horizontalAlignment="ALIGN_RIGHT">
      	<spin:SpinEdit ui:field='quantitySpinner' value = '1'/>
      </g:Cell>
      <g:Cell verticalAlignment="ALIGN_MIDDLE">
      	<g:PushButton ui:field='removeBtn' width="23px" height="22px" styleName='{style.remove}'/>
      </g:Cell>
  </g:HorizontalPanel>
</ui:UiBinder>
