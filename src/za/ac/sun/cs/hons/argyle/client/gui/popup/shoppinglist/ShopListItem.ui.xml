	xmlns:b='urn:import:za.ac.sun.cs.hons.argyle.client.gui.button'>

	<g:DockLayoutPanel unit="EM" width = "300px" height = "40px">
		<g:center>
			<g:Label ui:field='lbl' />
		</g:center>
		<g:east size="6">
			<spin:SpinEdit ui:field='quantitySpinner' value='1' />
		</g:east>
		<g:east size="2">
			<b:RemoveButton ui:field='removeBtn' />
		</g:east>
	</g:DockLayoutPanel>
</ui:UiBinder>
